<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background color -->

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#B1B1B1" />
            <corners android:radius="8dp" />
            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#DFDEDE" />
            <corners android:radius="8dp" />
            <padding
                android:left="1dp"
                android:right="1dp"
                android:top="2dp" />
        </shape>
    </item>
    <item>

        <shape
            android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>