<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center"
    android:id="@+id/baseStatsProgressLayout"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/baseStatNameText"
        android:text="HP"
        android:textAlignment="textEnd"
        android:textAppearance="@style/subtitle3"
        android:textColor="@color/wireframe"
        android:layout_width="28dp"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="1dp"
        android:layout_marginHorizontal="8dp"
        android:layout_height="match_parent"
        android:background="@color/lightGray" />

    <TextView
        android:id="@+id/baseStatValueText"
        android:text="025"
        android:layout_marginEnd="8dp"
        android:textAppearance="@style/subtitle3"
        android:textColor="@color/darkGray"
        android:textFontWeight="400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/baseStatProgressBar"
        android:layout_width="wrap_content"
        app:trackCornerRadius="4dp"
        android:max="200"
        app:trackColor="#19B8B8B8"
        app:indicatorColor="@color/wireframe"
        android:progress="55"
        android:layout_height="wrap_content" />

</LinearLayout>